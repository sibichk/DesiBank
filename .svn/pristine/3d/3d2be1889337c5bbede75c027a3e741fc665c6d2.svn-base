	@Override
	public boolean deleteCustomer(int id) {
		boolean del = false;
		Session session = getSession();
		session.beginTransaction();
		try {
			Customer customer = (Customer) session.load(Customer.class, id);
			session.delete(customer);
			session.getTransaction().commit();
			session.close();
			del = true;
		} catch (Exception e) {
			e.printStackTrace();
			del = false;
		}
		return del;
	}

